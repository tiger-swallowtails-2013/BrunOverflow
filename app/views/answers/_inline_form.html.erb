<%= form_for @answer, remote: true, :html => {:class => 'pure-form pure-form-stacked'} do |form| %>
  <%= form.label :Add_an_answer %><%= form.text_field :body %>
  <%= form.hidden_field :question_id, value: "#{@question.id}" %>
  <%= form.submit value: "Create new answer", class: "pure-button pure-button-primary" %>
<% end %>
